{
  "name": "lapriere-yosegaki",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "postinstall": "husky",
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "deploy:worker": "wrangler deploy --minify worker/index.ts",
    "db:generate": "dotenv -e=.env.local -- drizzle-kit generate:pg",
    "db:drop": "dotenv -e .env.local -- drizzle-kit drop",
    "db:push": "dotenv -e .env.local -- drizzle-kit push:pg",
    "db:studio": "dotenv -e .env.local -- drizzle-kit studio",
    "tsx": "dotenv -e .env.local -- tsx",
    "lint": "next lint",
    "lint:eslint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs --max-warnings 0 .",
    "format": "prettier --write --ignore-path .gitignore .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "staged:eslint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs --max-warnings 0 --no-warn-ignored",
    "staged:format": "prettier --check --ignore-path .gitignore",
    "ncu": "ncu -u --target minor",
    "ncu:dry": "ncu --target minor",
    "ncu:latest": "ncu --target latest"
  },
  "lint-staged": {
    "./**/*.{js,cjs,mjs,ts,cts,mts,tsx}": [
      "yarn staged:eslint",
      "yarn staged:format"
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@mantine/carousel": "^7.5.2",
    "@mantine/core": "^7.5.2",
    "@mantine/hooks": "^7.5.2",
    "@mantine/notifications": "^7.5.2",
    "@mantine/nprogress": "^7.5.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.6",
    "@t3-oss/env-nextjs": "^0.9.2",
    "@tabler/icons-react": "^2.47.0",
    "clsx": "^2.1.0",
    "dotenv": "^16.4.4",
    "dotenv-cli": "^7.3.0",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "embla-carousel-react": "^8.0.0-rc22",
    "framer-motion": "^11.0.5",
    "hono": "^3.12.12",
    "next": "14.1.0",
    "nextjs-toploader": "^1.6.6",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.1",
    "sharp": "^0.33.2",
    "tailwind-merge": "^2.2.1",
    "tailwind-variants": "^0.2.0",
    "twitter-text": "^3.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/next-on-pages": "^1.9.0",
    "@cloudflare/workers-types": "^4.20240208.0",
    "@eslint/eslintrc": "^3.0.1",
    "@eslint/js": "^8.56.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/cookie": "^0.6.0",
    "@types/eslint": "^8.56.2",
    "@types/eslint__js": "^8",
    "@types/node": "^20.11.17",
    "@types/pg": "^8",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/twitter-text": "^3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.2.2",
    "autoprefixer": "^10.4.17",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-config-flat-gitignore": "^0.1.3",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-next-on-pages": "^1.9.0",
    "eslint-plugin-perfectionist": "^2.5.0",
    "eslint-plugin-tailwindcss": "^3.14.2",
    "globals": "^14.0.0",
    "happy-dom": "^13.3.8",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-check-updates": "^16.14.15",
    "npm-run-all2": "^6.1.2",
    "pkg-dir": "^8.0.0",
    "postcss": "^8.4.35",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^3.2.5",
    "sass": "^1.70.0",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vercel": "^33.5.1",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2",
    "wrangler": "^3.28.2"
  },
  "volta": {
    "node": "20.11.0",
    "yarn": "4.1.0"
  }
}
